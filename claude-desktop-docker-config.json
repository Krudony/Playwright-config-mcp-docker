{
  "mcpServers": {
    "playwright-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "-v",
        "${workspaceFolder}:/workspace",
        "mcp/playwright",
        "node",
        "cli.js",
        "--config=/workspace/playwright-headful-config.json"
      ],
      "env": {
        "DISPLAY": "host.docker.internal:0",
        "DOCKER_HOST": "npipe:////./pipe/docker_engine"
      }
    },
    "filesystem-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-v",
        "${workspaceFolder}:/workspace",
        "mcp/filesystem",
        "node",
        "cli.js",
        "/workspace"
      ],
      "env": {
        "DOCKER_HOST": "npipe:////./pipe/docker_engine"
      }
    }
  }
}